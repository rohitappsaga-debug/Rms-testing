{
  "name": "restaurant-backend",
  "version": "1.0.0",
  "description": "Restaurant Order Booking System Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:standalone": "npm run db:generate && nodemon",
    "build": "npm run db:generate && tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:auth": "jest tests/auth.test.ts",
    "test:tables": "jest tests/tables.test.ts",
    "test:menu": "jest tests/menu.test.ts",
    "test:orders": "jest tests/orders.test.ts",
    "test:users": "jest tests/users.test.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "ts-node --transpile-only prisma/seed.ts",
    "db:studio": "prisma studio",
    "migrate:prod": "prisma migrate deploy",
    "start:prod": "npm run build && npm run migrate:prod && npm run start",
    "postinstall": "node scripts/setup-env.js && npm run db:generate"
  },
  "keywords": [
    "restaurant",
    "pos",
    "api",
    "typescript",
    "express"
  ],
  "author": "Restaurant Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "pusher": "^5.3.2",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "nodemon": "^3.0.2",
    "prisma": "^7.2.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}